<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <TextView

            android:text="Auxillary Marker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:id="@+id/title"
            android:textSize="36sp"
            android:fontFamily="sans-serif"
            android:textColor="@android:color/tertiary_text_dark"
            android:textAlignment="center"

            android:layout_marginRight="0dp"
            android:layout_marginTop="15dp"
            android:layout_alignParentLeft="true" />

        <TextView
            android:text="Bird Life Status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:textSize="18sp"
            android:id="@+id/textView16"
            android:layout_below="@+id/title"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Spinner
            android:id="@+id/lifeSpin"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView16"
            android:layout_alignRight="@+id/tableButton"
            android:layout_alignEnd="@+id/tableButton" />

        <TextView
            android:text="Capture Method"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView16"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="50dp"
            android:textSize="18sp"
            android:id="@+id/textView17" />

        <Spinner
            android:id="@+id/methodSpin"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/tableButton"
            android:layout_alignRight="@+id/tableButton"
            android:layout_alignTop="@+id/textView17"
            android:entries="@array/markerStatus" />

        <TextView
            android:text="Date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView17"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="50dp"
            android:textSize="18sp"
            android:id="@+id/textView18" />

        <TextView
            android:text="Time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView18"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="50dp"
            android:textSize="18sp"
            android:id="@+id/textView19" />

        <TextView
            android:text="Tail Base Color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView19"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="50dp"
            android:textSize="18sp"
            android:id="@+id/textView20" />

        <Spinner
            android:id="@+id/tailSpin"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/tableButton"
            android:layout_alignRight="@+id/tableButton"
            android:layout_alignTop="@+id/textView20"
            android:entries="@array/tailBaseColor" />

        <TextView
            android:text="Band Code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView20"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="50dp"
            android:textSize="18sp"
            android:id="@+id/textView21" />

        <Spinner
            android:id="@+id/bandSpin"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/tableButton"
            android:layout_alignRight="@+id/tableButton"
            android:layout_alignTop="@+id/textView21"
            android:entries="@array/bandCode" />

        <TextView
            android:text="Short Band Letter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView21"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="50dp"
            android:textSize="18sp"
            android:id="@+id/textView22" />

        <Spinner
            android:id="@+id/shortBandLet"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/tableButton"
            android:layout_alignRight="@+id/tableButton"
            android:layout_alignTop="@+id/textView22"
            android:entries="@array/bandingLocation" />

        <TextView
            android:text="Short Band Number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView22"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="50dp"
            android:textSize="18sp"
            android:id="@+id/textView23" />

        <TextView
            android:text="Band Number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView23"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="50dp"
            android:textSize="18sp"
            android:id="@+id/textView24" />

        <TextView
            android:text="BEEtag Number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView24"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="50dp"
            android:textSize="18sp"
            android:id="@+id/textView25" />

        <EditText
            android:id="@+id/beeText"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView25"
            android:layout_alignEnd="@+id/tableButton"
            android:layout_alignRight="@+id/tableButton"
            android:inputType="number"
            android:maxLines="1"
            android:textSize="18sp" />


        <TextView
            android:text="RFID Number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView25"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="50dp"
            android:textSize="18sp"
            android:id="@+id/textView26" />

        <Button
            android:id="@+id/ocr_button"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:layout_alignBottom="@+id/textView26"
            android:layout_alignEnd="@+id/beeText"
            android:layout_alignRight="@+id/beeText"
            android:text="Scan"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/rfidText"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView26"
            android:layout_toStartOf="@+id/ocr_button"
            android:inputType="number"
            android:maxLines="1" />

        <TextView
            android:text="Age Code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView26"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="50dp"
            android:textSize="18sp"
            android:id="@+id/textView27" />


        <TextView
            android:text="Sex Code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView27"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="50dp"
            android:textSize="18sp"
            android:id="@+id/textView28" />

        <TextView
            android:text="Species ID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView28"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="50dp"
            android:textSize="18sp"
            android:id="@+id/textView29" />

        <TextView
            android:text="Pox Lesions 2015"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView29"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="50dp"
            android:textSize="18sp"
            android:id="@+id/textView30" />

        <Spinner
            android:id="@+id/sexSpin"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textView29"
            android:layout_alignEnd="@+id/tableButton"
            android:layout_alignRight="@+id/tableButton"
            android:entries="@array/beetagColor" />

        <Spinner
            android:id="@+id/ageSpin"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:entries="@array/ageCode"
            android:layout_alignBottom="@+id/textView27"
            android:layout_alignRight="@+id/tableButton"
            android:layout_alignEnd="@+id/tableButton" />

        <Spinner
            android:id="@+id/speciesSpin"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView29"
            android:layout_alignRight="@+id/tableButton"
            android:layout_alignEnd="@+id/tableButton" />

        <EditText
            android:id="@+id/bandNum"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textView25"
            android:layout_alignRight="@+id/tableButton"
            android:layout_alignEnd="@+id/tableButton"
            android:ems="10"
            android:inputType="number" />

        <Spinner
            android:id="@+id/poxSpin"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/tableButton"
            android:layout_alignRight="@+id/tableButton"
            android:layout_alignTop="@+id/textView30"
            android:entries="@array/Boolean" />

        <EditText
            android:id="@+id/shortBandNum"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/bandNum"
            android:layout_alignEnd="@+id/tableButton"
            android:layout_alignRight="@+id/tableButton"
            android:layout_marginBottom="18dp"
            android:ems="10"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/tableButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/homeButton"
            android:layout_alignBottom="@+id/homeButton"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:text="Table View" />

        <Button
            android:id="@+id/homeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView30"
            android:layout_marginBottom="18dp"
            android:layout_marginTop="18dp"
            android:text="Home" />

        <EditText
            android:id="@+id/dateText"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView18"
            android:layout_alignEnd="@+id/tableButton"
            android:layout_alignRight="@+id/tableButton"
            android:ems="10"
            android:focusable="false"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/timeText"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView19"
            android:layout_alignBottom="@+id/textView19"
            android:layout_alignRight="@+id/tableButton"
            android:layout_alignEnd="@+id/tableButton"
            android:ems="10"
            android:focusable="false"
            android:inputType="textPersonName" />


    </RelativeLayout>

</ScrollView>
