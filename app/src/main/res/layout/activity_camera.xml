<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_camera"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="beetag.zxingtest.cameraActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <TableLayout
            android:id="@+id/tagTable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow
                android:id="@+id/r0"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/t00"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:srcCompat="@drawable/black" />

                <ImageView
                    android:id="@+id/t01"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:srcCompat="@drawable/black" />

                <ImageView
                    android:id="@+id/t02"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:srcCompat="@drawable/black" />

                <ImageView
                    android:id="@+id/t03"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:srcCompat="@drawable/black" />

                <ImageView
                    android:id="@+id/t04"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:srcCompat="@drawable/black" />

            </TableRow>

            <TableRow
                android:id="@+id/r1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/t10"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:srcCompat="@drawable/black" />

                <ImageView
                    android:id="@+id/t11"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:srcCompat="@drawable/black" />

                <ImageView
                    android:id="@+id/t12"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:srcCompat="@drawable/black" />

                <ImageView
                    android:id="@+id/t13"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:srcCompat="@drawable/black" />

                <ImageView
                    android:id="@+id/t14"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:srcCompat="@drawable/black" />

            </TableRow>

            <TableRow
                android:id="@+id/r2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/t20"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:srcCompat="@drawable/black" />

                <ImageView
                    android:id="@+id/t21"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:srcCompat="@drawable/black" />

                <ImageView
                    android:id="@+id/t22"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:srcCompat="@drawable/black" />

                <ImageView
                    android:id="@+id/t23"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:srcCompat="@drawable/black" />

                <ImageView
                    android:id="@+id/t24"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:srcCompat="@drawable/black" />

            </TableRow>

            <TableRow
                android:id="@+id/r3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/t30"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:srcCompat="@drawable/black" />

                <ImageView
                    android:id="@+id/t31"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:srcCompat="@drawable/black" />

                <ImageView
                    android:id="@+id/t32"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:srcCompat="@drawable/black" />

                <ImageView
                    android:id="@+id/t33"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:srcCompat="@drawable/black" />

                <ImageView
                    android:id="@+id/t34"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:srcCompat="@drawable/black" />

            </TableRow>

            <TableRow
                android:id="@+id/r4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/t40"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:srcCompat="@drawable/black" />

                <ImageView
                    android:id="@+id/t41"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:srcCompat="@drawable/black" />

                <ImageView
                    android:id="@+id/t42"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:srcCompat="@drawable/black" />

                <ImageView
                    android:id="@+id/t43"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:srcCompat="@drawable/black" />

                <ImageView
                    android:id="@+id/t44"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:srcCompat="@drawable/black" />

            </TableRow>

        </TableLayout>

        <TextView
            android:id="@+id/codeText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/decText"
            android:layout_centerHorizontal="true"
            android:layout_weight="0.04"
            android:text="BEEtag Code"
            android:textAlignment="center"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/decText"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_above="@+id/copyButton"
            android:layout_alignEnd="@+id/codeText"
            android:layout_alignLeft="@+id/codeText"
            android:layout_alignRight="@+id/codeText"
            android:layout_alignStart="@+id/codeText"
            android:layout_marginBottom="40dp"
            android:layout_weight="0.01"
            android:text="128"
            android:textAlignment="center"
            android:textSize="30sp"
            android:textStyle="normal|bold" />

        <Button
            android:id="@+id/copyButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/markerButton"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:text="COPY" />

        <Button
            android:id="@+id/webButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/markerButton"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:text="OPEN WEB INTERFACE"
            android:layout_weight="0.00" />

        <Button
            android:id="@+id/markerButton"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:layout_alignLeft="@+id/copyButton"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/copyButton"
            android:layout_gravity="center"
            android:layout_marginBottom="30dp"
            android:text="Auxillary Markers"
            android:layout_weight="0.01" />

    </LinearLayout>

</RelativeLayout>
