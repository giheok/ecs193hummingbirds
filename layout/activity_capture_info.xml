<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_capture_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.ecs193.hummingbridbee.capture_info">

        <TextView

            android:text="Capture Information"

            android:layout_width="wrap_content"

            android:layout_height="wrap_content"

            android:layout_alignParentTop="true"

            android:layout_alignParentStart="true"

            android:id="@+id/title"

            android:background="@android:color/holo_blue_dark"

            android:textSize="36sp"

            android:fontFamily="sans-serif"

            android:textColor="@android:color/background_light"

            android:textAlignment="center"

            tools:layout_marginLeft="0dp"

            android:layout_marginRight="0dp"

            android:layout_marginTop="0dp"
            android:layout_alignParentLeft="true" />



        <TextView

            android:text="Recorder"

            android:layout_width="wrap_content"

            android:layout_height="wrap_content"

            android:layout_below="@+id/title"

            android:layout_alignParentLeft="true"

            android:layout_alignParentStart="true"

            android:layout_marginTop="29dp"

            android:id="@+id/textView2"

            android:textSize="18sp" />



        <TextView

            android:text="Material Under Band"

            android:layout_width="wrap_content"

            android:layout_height="wrap_content"

            android:layout_below="@+id/textView11"

            android:layout_alignParentLeft="true"

            android:layout_alignParentStart="true"

            android:layout_marginTop="20dp"

            android:id="@+id/textView12"

            android:textSize="18sp" />



        <Spinner

            android:layout_width="match_parent"

            android:layout_height="wrap_content"

            android:layout_alignTop="@+id/textView2"

            android:layout_toEndOf="@+id/textView5"

            android:id="@+id/spinner"

            android:layout_toRightOf="@+id/textView5" />



        <Spinner

            android:layout_width="match_parent"

            android:layout_height="wrap_content"

            android:layout_alignTop="@+id/textView3"

            android:layout_alignLeft="@+id/spinner"

            android:layout_alignStart="@+id/spinner"

            android:id="@+id/spinner2" />



        <TextView

            android:text="Bander"

            android:layout_width="wrap_content"

            android:layout_height="wrap_content"

            android:id="@+id/textView3"

            android:textSize="18sp"

            android:layout_below="@+id/spinner"

            android:layout_alignParentLeft="true"

            android:layout_alignParentStart="true"

            android:layout_marginTop="11dp" />



        <TextView

            android:text="Location"

            android:layout_width="wrap_content"

            android:layout_height="wrap_content"

            android:layout_marginTop="17dp"

            android:id="@+id/textView4"

            android:textSize="18sp"

            android:layout_below="@+id/spinner2"

            android:layout_alignParentLeft="true"

            android:layout_alignParentStart="true" />



        <TextView

            android:text="Banding Summary ID"

            android:layout_width="wrap_content"

            android:layout_height="wrap_content"

            android:layout_marginTop="20dp"

            android:id="@+id/textView5"

            android:textSize="18sp"

            android:layout_below="@+id/textView4"

            android:layout_alignParentLeft="true"

            android:layout_alignParentStart="true" />



        <TextView

            android:text="Band Record ID"

            android:layout_width="wrap_content"

            android:layout_height="wrap_content"

            android:layout_marginTop="21dp"

            android:id="@+id/textView6"

            android:textSize="18sp"

            android:layout_below="@+id/textView5"

            android:layout_alignParentLeft="true"

            android:layout_alignParentStart="true" />



        <TextView

            android:text="Capture Date"

            android:layout_width="wrap_content"

            android:layout_height="wrap_content"

            android:id="@+id/textView7"

            android:textSize="18sp"

            android:layout_centerVertical="true"

            android:layout_alignParentLeft="true"

            android:layout_alignParentStart="true" />



        <TextView

            android:text="Capture Time"

            android:layout_width="wrap_content"

            android:layout_height="wrap_content"

            android:layout_marginTop="22dp"

            android:id="@+id/textView8"

            android:textSize="18sp"

            android:layout_below="@+id/textView7"

            android:layout_alignParentLeft="true"

            android:layout_alignParentStart="true" />



        <TextView

            android:text="Capturer Method"

            android:layout_width="wrap_content"

            android:layout_height="wrap_content"

            android:layout_marginTop="19dp"

            android:id="@+id/textView9"

            android:textSize="18sp"

            android:layout_below="@+id/textView8"

            android:layout_alignParentLeft="true"

            android:layout_alignParentStart="true" />



        <TextView

            android:text="Bird Life Status"

            android:layout_width="wrap_content"

            android:layout_height="wrap_content"

            android:layout_marginTop="20dp"

            android:id="@+id/textView10"

            android:textSize="18sp"

            android:layout_below="@+id/textView9"

            android:layout_alignParentLeft="true"

            android:layout_alignParentStart="true" />



        <TextView

            android:text="Band Code"

            android:layout_width="wrap_content"

            android:layout_height="wrap_content"

            android:layout_marginTop="23dp"

            android:id="@+id/textView11"

            android:textSize="18sp"

            android:layout_below="@+id/textView10"

            android:layout_alignParentLeft="true"

            android:layout_alignParentStart="true" />



        <TextView

            android:text="Leg Condition Code"

            android:layout_width="wrap_content"

            android:layout_height="wrap_content"

            android:id="@+id/textView13"

            android:textSize="18sp"

            android:layout_alignParentBottom="true"

            android:layout_alignParentLeft="true"

            android:layout_alignParentStart="true"

            android:layout_marginBottom="13dp" />



        <Spinner

            android:layout_width="match_parent"

            android:layout_height="wrap_content"

            android:layout_alignTop="@+id/textView4"

            android:layout_toRightOf="@+id/textView5"

            android:layout_toEndOf="@+id/textView5"

            android:id="@+id/spinner3" />



        <EditText

            android:layout_width="wrap_content"

            android:layout_height="wrap_content"

            android:inputType="textPersonName"

            android:text="xxxxxxx"

            android:ems="10"

            android:id="@+id/editText"

            android:layout_alignBaseline="@+id/textView5"

            android:layout_alignBottom="@+id/textView5"

            android:layout_alignParentRight="true"

            android:layout_alignParentEnd="true"

            android:layout_toEndOf="@+id/textView5" />



        <EditText

            android:layout_width="wrap_content"

            android:layout_height="wrap_content"

            android:inputType="textPersonName"

            android:text="Band Record ID"

            android:ems="10"

            android:layout_below="@+id/editText"

            android:layout_alignLeft="@+id/editText"

            android:layout_alignStart="@+id/editText"

            android:id="@+id/editText2" />


        <Spinner

            android:layout_width="match_parent"

            android:layout_height="wrap_content"

            android:layout_alignTop="@+id/textView10"

            android:layout_toEndOf="@+id/textView12"

            android:id="@+id/spinner5"

            android:layout_alignLeft="@+id/spinner4"

            android:layout_alignStart="@+id/spinner4" />



        <Spinner

            android:layout_width="match_parent"

            android:layout_height="wrap_content"

            android:layout_alignTop="@+id/textView11"

            android:layout_alignLeft="@+id/spinner5"

            android:layout_alignStart="@+id/spinner5"

            android:id="@+id/spinner6" />



        <Spinner

            android:layout_width="match_parent"

            android:layout_height="wrap_content"

            android:layout_alignBottom="@+id/textView12"

            android:layout_alignLeft="@+id/spinner6"

            android:layout_alignStart="@+id/spinner6"

            android:id="@+id/spinner7" />



        <Spinner

            android:layout_width="match_parent"

            android:layout_height="wrap_content"

            android:layout_alignTop="@+id/textView13"

            android:layout_alignLeft="@+id/spinner7"

            android:layout_alignStart="@+id/spinner7"

            android:id="@+id/spinner9" />

        <Spinner

            android:layout_width="match_parent"

            android:layout_height="wrap_content"

            android:id="@+id/spinner4"
            android:layout_alignBottom="@+id/textView9"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />



</RelativeLayout>
